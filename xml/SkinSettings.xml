					<width>390</width>
					<height>80</height>
					<aligny>center</aligny>
					<font>font24_title</font>
					<textcolor>white</textcolor>
					<texturefocus>list_focus.png</texturefocus>
					<texturenofocus></texturenofocus>
					<pulseonselect>false</pulseonselect>
